{
  "family": "minecraft-server",
  "requiresCompatibilities": ["FARGATE"],
  "networkMode": "awsvpc",
  "cpu": "1024",
  "memory": "2048",
  "executionRole": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskRole",
  "volumes": [
    {
      "name": "efs",
      "efsVolumeConfiguration": {
        "fileSystemId": "${efs_id}",
        "transitEncryption": "ENABLED"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "minecraft-server",
      "image": "itzg/minecraft-server",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 25565,
          "hostPort": 25565,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "EULA",
          "value": "TRUE"
        },
        {
          "name": "AUTO_STOP",
          "value": "TRUE"
        },
        {
          "name": "AUTO_STOP_TIMEOUT_EST",
          "value": "300"
        },
        {
          "name": "OVERRIDE_SERVER_PROPERTIES",
          "value": "true"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "efs",
          "containerPath": "/data",
          "readOnly": false
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/minecraft-server",
          "awslogs-region": "${aws_region}",
          "awslogs-stream-prefix": "minecraft",
          "awslogs-create-group": "true"
        }
      }
    }
  ]
}